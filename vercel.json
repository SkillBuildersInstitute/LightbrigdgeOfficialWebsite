{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/src/index.html" },
    { "source": "/cms/:path*", "destination": "/src/cms/:path*" },
    { "source": "/pages/:path*", "destination": "/src/pages/:path*" },
    { "source": "/css/:path*", "destination": "/src/css/:path*" },
    { "source": "/js/:path*", "destination": "/src/js/:path*" },
    { "source": "/images/:path*", "destination": "/src/images/:path*" },
    { "source": "/:path*", "destination": "/src/:path*" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
